<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2">

    <TextView
        android:layout_width="@dimen/dimen_400"
        android:layout_height="wrap_content"
        android:text="Movement - yaw (m):"
        android:textColor="#000"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_size_30"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="@dimen/dimen_400"
        android:layout_height="wrap_content"
        android:text="Movement - altitude (m):"
        android:textColor="#000"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_size_30"
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:layout_width="@dimen/dimen_400"
        android:layout_height="wrap_content"
        android:text="Movement - degrees (deg):"
        android:textColor="#000"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_size_30"
        android:id="@+id/textView3"
        android:layout_row="2"
        android:layout_column="0" />

    <TextView
        android:layout_width="@dimen/dimen_400"
        android:layout_height="wrap_content"
        android:text="Turn speed (%):"
        android:textColor="#000"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_size_30"
        android:id="@+id/textView4"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:layout_width="@dimen/dimen_400"
        android:layout_height="wrap_content"
        android:text="Check duration (s):"
        android:textColor="#000"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_size_30"
        android:id="@+id/textView5"
        android:layout_row="4"
        android:layout_column="0" />

    <EditText android:id="@+id/lblSettings_Yaw"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_50"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_30"
        android:layout_row="0"
        android:layout_column="1"
        android:inputType="number" />

    <EditText android:id="@+id/lblSettings_Alt"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_50"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_30"
        android:layout_row="1"
        android:layout_column="1"
        android:inputType="number"/>

    <EditText android:id="@+id/lblSettings_Deg"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_50"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_30"
        android:layout_row="2"
        android:layout_column="1"
        android:inputType="number"/>

    <EditText android:id="@+id/lblSettings_TurnSpd"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_50"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_30"
        android:layout_row="3"
        android:layout_column="1"
        android:inputType="number"/>

    <EditText android:id="@+id/lblSettings_ChkDur"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_50"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_30"
        android:layout_row="4"
        android:layout_column="1"
        android:inputType="number"/>
</GridLayout>